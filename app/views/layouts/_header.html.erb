<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Forum on rails", root_path, id: "logo" %>

    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Kezdőoldal", root_path %></li>

        <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Profil <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profil beállítások", @current_user %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Kijelentkezés", logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to "Bejelentkezés", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
